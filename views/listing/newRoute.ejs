<% layout('layouts/boilerPlate') -%>
<body>

    <div class="row mt-3">

        <div class="col-8 offset-2">
            <h1>Create New Listing</h1>


            <form class="needs-validation" novalidate action="/listing" method="post" enctype="multipart/form-data">

                    <div class="mb-3  ">
                        <label for="title" class="form-label">Title</label>
                        <input class="form-control"  type="text" name="Listing[title]" id="title" required placeholder="Enter a title"> 
                    </div>
                    <div class="mb-3  ">
                        <label for="discription" class="form-label">Discription</label>
                        <textarea class="form-control" type="text" name="Listing[discription]" id="discription" placeholder="Tell about this place" ></textarea> 
                    </div>
                    
                    <div class="mb-3  ">
                        <label for="image" class="form-label">Upload Image</label>
                        <input type="file" name="Listing[image]" id="image" class="form-control" required>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <div class="mb-3  ">
                                <label for="price" class="form-label">Price</label>
                                <input class="form-control" type="number" name="Listing[price]" id="price" placeholder="Enter Price" required> 
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="mb-3  ">
                                <label for="country" class="form-label">Country</label>
                                <input class="form-control" type="text" name="Listing[country]" id="country" placeholder="Enter Country" > 
                            </div>
                        </div>
                    </div>

                    <div class="mb-3  ">
                        <label for="location" class="form-label">Location</label>
                        <input class="form-control" type="text" name="Listing[location]" id="location" placeholder="Enter Location" > 
                    </div>
                    

                    <button type="submit" class="btn btn-danger">Add</button>
                
            </form>
        </div>
    </div>

    
</body>
